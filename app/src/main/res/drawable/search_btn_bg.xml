<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:bottom="2dp"
        android:left="-2dp"
        android:right="2dp"
        android:top="2dp"
        android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <solid android:color="@color/primaryBtnPressed" />
            <!--<stroke
                android:width="1dp"
                android:color="@color/primaryBtnPressed"/>-->
            <corners android:radius="5dp"
                android:bottomRightRadius="5dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="0dp" android:topRightRadius="5dp"/>
        </shape>
    </item>
    <item android:bottom="2dp"
        android:left="-2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle"  >
            <!--<solid android:color="@color/primaryBtn" />
            <stroke
                android:width="1dp"
                android:color="@color/primaryBtn"/>-->
            <corners android:radius="5dp"
                android:bottomRightRadius="5dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="0dp" android:topRightRadius="5dp"/>
            <gradient
                android:startColor="@color/buttonGradStart"
                android:endColor="@color/buttonGradEnd"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
</selector>