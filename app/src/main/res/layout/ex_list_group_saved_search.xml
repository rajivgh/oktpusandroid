<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="?android:attr/dividerHorizontal"
    android:showDividers="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:id="@+id/row_layout">
    <!--android:background="?attr/selectableItemBackgroundBorderless"       //Lollipop ripple effect-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/ll_group_header">
            <TextView
                android:id="@+id/grp_header_title"
                android:layout_width="match_parent"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:gravity="left"
                android:layout_marginRight="30dp"
                android:textAllCaps="true"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/grp_header_title_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/groupHeaderSelectedText"
                android:textSize="18sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/grp_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:textSize="24sp"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
