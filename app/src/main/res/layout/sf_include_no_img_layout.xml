<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/include_no_img_cars_layout">
        <TextView
            android:id="@+id/include_no_img_cars"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/img0_label"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/buttonText"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_marginTop="2dp"/>
        <!--<com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/include_no_img_cars_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:kswThumbColor="@color/colorAccent"
            app:kswBackColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:duplicateParentState="true"
            android:clickable="false"
            android:focusable="false"
            />-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/include_no_img_cars_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:duplicateParentState="true"
                android:layout_gravity="right|center_vertical"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:focusable="false"
                />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>