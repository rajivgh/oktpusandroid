<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tv_error"
        android:textColor="@color/err_txt"
        android:background="@drawable/error_box_bg"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_wmcw_terms_agree"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cb_wmcw_terms"
            android:text="I agree to the " />
        <CheckBox
            android:id="@+id/cb_wmcw_terms"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wmcw_price_note"
        android:background="@drawable/info_box_bg"
        android:padding="10dp" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_state_change"
        android:padding="@dimen/button_padding"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rl_wmcw_evaluate">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/buttonText"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Get Evaluation"
            android:clickable="false"/>
    </RelativeLayout>
</LinearLayout>